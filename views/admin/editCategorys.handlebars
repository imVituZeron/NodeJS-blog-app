{{/each}}
<h3>Edit Categorys</h3>
<div class="card">
   <div class="card-body">
      <form action="/admin/categorys/edit" method="POST">
      <input type="hidden" name="id" value="{{category._id}}" >
         <label for="name">Name:</label>
            <input class="form-control" value={{category.name}} type="text" id="name" name="name" placeholder="Category name">
         <label for="slug">Slug:</label>
            <input class="form-control" value={{category.slug}} type="text" id="slug" name="slug" placeholder="Category slug">
            <br>
         <button type="submit" class="btn btn-success">Edit Category</button>
         <a href="/admin/categorys">
            <button class="btn mt-2">Back Page</button>
         </a>
      </form>
   </div>
</div>